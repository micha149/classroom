<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.analyzer.loader.phar" class="Code\AnalyzerBundle\Loader\PharLoader">
            <argument type="service" id="code.analyzer.serializer.xml" />
        </service>

        <service id="code.analyzer.loader.xml" class="Code\AnalyzerBundle\Loader\FileLoader">
            <argument type="service" id="code.analyzer.serializer.xml" />
        </service>

        <service id="code.analyzer.loader.resolver" class="Code\AnalyzerBundle\Loader\LoaderResolver">
            <argument type="collection">
                <argument type="service" id="code.analyzer.loader.phar" />
                <argument type="service" id="code.analyzer.loader.xml" />
            </argument>
        </service>

        <service id="code.analyzer.loader" class="Code\AnalyzerBundle\Loader\DelegatingLoader">
            <argument type="service" id="code.analyzer.loader.resolver" />
        </service>
    </services>
</container>
