<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.analyzer.post_processor.grade" class="Code\AnalyzerBundle\PostProcessor\GradePostProcessor">
            <argument type="service" id="code.analyzer.grader" />
        </service>

        <service id="code.analyzer.post_processor.gpa" class="Code\AnalyzerBundle\PostProcessor\GpaPostProcessor">
            <argument type="service" id="code.analyzer.grade_counter" />
            <argument type="service" id="code.analyzer.gpa_calculator" />
        </service>
    </services>
</container>
