<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.analyzer.serializer.xml" class="Code\AnalyzerBundle\Serializer\XmlSerializer">
        </service>

        <service id="code.analyzer.process_executor" class="Code\AnalyzerBundle\ProcessExecutor">
        </service>

        <service id="code.analyzer.chain_analyzer" class="Code\AnalyzerBundle\Analyzer\ChainAnalyzer">
            <argument type="collection" />
        </service>

        <service id="code.analyzer.gpa_calculator" class="Code\AnalyzerBundle\Grader\GpaCalculator">
        </service>

        <service id="code.analyzer.grader" class="Code\AnalyzerBundle\Grader\Grader">
        </service>

        <service id="code.analyzer.filter.grade" class="Code\AnalyzerBundle\Filter\GradeFilter">
            <argument type="service" id="code.analyzer.grader" />
        </service>
    </services>
</container>
