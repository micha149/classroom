<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.php_analyzer.filter.unused_files" class="Code\PhpAnalyzerBundle\Filter\UnusedFilesFilter">
        </service>

        <service id="code.php_analyzer.filter" class="Code\AnalyzerBundle\Filter\ChainFilter">
            <argument type="collection">
                <argument type="service" id="code.php_analyzer.filter.unused_files" />
                <argument type="service" id="code.analyzer.filter.grade" />
            </argument>
        </service>
    </services>
</container>
