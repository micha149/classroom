<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="code.php_analyzer.reflection_service" class="Code\PhpAnalyzerBundle\ReflectionService">
        </service>

        <service id="code.php_analyzer.analyzer" class="Code\AnalyzerBundle\Analyzer\ChainAnalyzer">
            <argument type="collection">
                <argument type="service" id="code.php_analyzer.base.analyzer" />
                <argument type="service" id="code.php_analyzer.phpcpd.analyzer" />
                <argument type="service" id="code.php_analyzer.phpcs.analyzer" />
                <argument type="service" id="code.php_analyzer.phpmd.analyzer" />
                <argument type="service" id="code.php_analyzer.pdepend.analyzer" />
            </argument>
        </service>

        <service id="code.php_analyzer.result_builder" class="Code\PhpAnalyzerBundle\ResultBuilder">
            <argument type="service" id="code.php_analyzer.analyzer" />
            <argument type="service" id="code.php_analyzer.filter" />
        </service>

    </services>
</container>
