<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.php_analyzer.phpmd.executable">%kernel.root_dir%/../bin/phpmd</parameter>
    </parameters>

    <services>
        <service id="code.php_analyzer.phpmd.collector" class="Code\PhpAnalyzerBundle\Phpmd\PhpmdCollector">
            <argument type="service" id="code.analyzer.process_executor" />
            <argument type="service" id="logger" />
            <argument>%code.php_analyzer.phpmd.executable%</argument>
            <tag name="monolog.logger" channel="analyzer" />
        </service>

        <service id="code.php_analyzer.phpmd.processor" class="Code\PhpAnalyzerBundle\Phpmd\PhpmdProcessor">
            <argument type="service" id="code.analyzer.reflection_service" />
        </service>

        <service id="code.php_analyzer.phpmd.analyzer" class="Code\AnalyzerBundle\Analyzer\Analyzer">
            <argument type="service" id="code.php_analyzer.phpmd.collector" />
            <argument type="service" id="code.php_analyzer.phpmd.processor" />
            <tag name="code.analyzer" />
        </service>
    </services>
</container>
