<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.php_analyzer.pdepend.executable">%kernel.root_dir%/../bin/pdepend</parameter>
    </parameters>

    <services>
        <service id="code.php_analyzer.pre_processor.base.collector" class="Code\PhpAnalyzerBundle\PreProcessor\BaseCollector">
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="analyzer" />
        </service>

        <service id="code.php_analyzer.pre_processor.base" class="Code\PhpAnalyzerBundle\PreProcessor\BasePreProcessor">
            <argument type="service" id="code.php_analyzer.pre_processor.base.collector" />
            <argument type="service" id="code.php_analyzer.reflection_service" />
        </service>

        <service id="code.php_analyzer.pre_processor" class="Code\AnalyzerBundle\PreProcessor\ChainPreProcessor">
            <argument type="collection" >
                <argument type="service" id="code.php_analyzer.pre_processor.base" />
            </argument>
        </service>
    </services>
</container>
