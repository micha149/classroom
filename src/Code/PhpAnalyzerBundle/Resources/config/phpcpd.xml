<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.php_analyzer.phpcpd.executable">%kernel.root_dir%/../bin/phpcpd</parameter>
    </parameters>

    <services>
        <service id="code.php_analyzer.phpcpd.collector" class="Code\PhpAnalyzerBundle\Phpcpd\PhpcpdCollector">
            <argument type="service" id="code.analyzer.process_executor" />
            <argument type="service" id="logger" />
            <argument>%code.php_analyzer.phpcpd.executable%</argument>
            <tag name="monolog.logger" channel="analyzer" />
        </service>

        <service id="code.php_analyzer.phpcpd.processor" class="Code\PhpAnalyzerBundle\Phpcpd\PhpcpdProcessor">
            <argument type="service" id="code.php_analyzer.phpcpd.collector" />
        </service>
    </services>
</container>
