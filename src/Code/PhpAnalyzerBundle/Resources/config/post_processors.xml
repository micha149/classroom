<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.php_analyzer.post_processor.unused_files" class="Code\PhpAnalyzerBundle\PostProcessor\UnusedFilesPostProcessor">
        </service>

        <service id="code.php_analyzer.post_processor" class="Code\AnalyzerBundle\PostProcessor\ChainPostProcessor">
            <argument type="collection" >
                <argument type="service" id="code.php_analyzer.post_processor.unused_files" />
                <argument type="service" id="code.analyzer.post_processor.grade" />
                <argument type="service" id="code.analyzer.post_processor.gpa" />
            </argument>
        </service>
    </services>
</container>
