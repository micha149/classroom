<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.php_analyzer.pdepend.executable">%kernel.root_dir%/../bin/pdepend</parameter>
    </parameters>

    <services>
        <service id="code.php_analyzer.pdepend.collector" class="Code\PhpAnalyzerBundle\Pdepend\PdependCollector">
            <argument type="service" id="code.analyzer.process_executor" />
            <argument type="service" id="logger" />
            <argument>%code.php_analyzer.pdepend.executable%</argument>
            <tag name="monolog.logger" channel="analyzer" />
        </service>

        <service id="code.php_analyzer.pdepend.processor" class="Code\PhpAnalyzerBundle\Pdepend\PdependProcessor">
            <argument type="service" id="code.php_analyzer.pdepend.collector" />
        </service>
    </services>
</container>
