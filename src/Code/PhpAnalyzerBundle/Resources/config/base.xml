<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.php_analyzer.pdepend.executable">%kernel.root_dir%/../bin/pdepend</parameter>
    </parameters>

    <services>
        <service id="code.php_analyzer.base.collector" class="Code\PhpAnalyzerBundle\Base\BaseCollector">
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="analyzer" />
        </service>

        <service id="code.php_analyzer.base.processor" class="Code\PhpAnalyzerBundle\Base\BaseProcessor">
            <argument type="service" id="code.analyzer.reflection_service" />
        </service>

        <service id="code.php_analyzer.base.analyzer" class="Code\AnalyzerBundle\Analyzer\Analyzer">
            <argument type="service" id="code.php_analyzer.base.collector" />
            <argument type="service" id="code.php_analyzer.base.processor" />
            <tag name="code.analyzer" />
        </service>
    </services>
</container>
